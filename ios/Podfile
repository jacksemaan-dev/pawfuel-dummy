platform :ios, '13.0' # match what Flutter auto-upgrades to
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end
  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting it and running flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  # Build as dynamic frameworks so Swift modules are visible (fixes: No such module 'Flutter')
  use_frameworks!

  # Explicitly declare the Flutter pod so it’s a proper framework in the Pods project
  pod 'Flutter', :path => 'Flutter'

  # Standard Flutter plugin integration
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  # Apply Flutter’s defaults if possible; don’t crash CI if helper API shifts
  begin
    flutter_additional_ios_build_settings(installer)
  rescue => e
    puts "Warning: Skipped flutter_additional_ios_build_settings: #{e}"
  end

  # Make sure Swift modules are generated across the board
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |config|
      config.build_settings['SWIFT_VERSION'] = '5.0'
      config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
      config.build_settings['DEFINES_MODULE'] = 'YES'
    end
  end

  # Double-ensure the Flutter pod is a module for import in Swift
  flutter_target = installer.pods_project.targets.find { |t| t.name == 'Flutter' }
  if flutter_target
    flutter_target.build_configurations.each do |config|
      config.build_settings['DEFINES_MODULE'] = 'YES'
      config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
    end
  end
end
