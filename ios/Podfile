platform :ios, '13.0'

# ðŸ‘‰ This line is REQUIRED so the helpers below exist:
require File.expand_path(File.join('..', 'Flutter', 'podhelper'), __FILE__)

# Sets up Flutterâ€™s CocoaPods integration (defines flutter_* methods)
flutter_ios_podfile_setup

target 'Runner' do
  # Stable combo with Flutter
  use_frameworks! :linkage => :static
  use_modular_headers!

  # Installs Flutter engine + plugin pods for Runner
  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))
end

post_install do |installer|
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end

  # Recommended by Flutter to set extra build flags
  flutter_additional_ios_build_settings(installer)
end
